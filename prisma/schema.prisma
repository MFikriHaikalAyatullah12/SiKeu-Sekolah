// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  role          UserRole  @default(USER)
  image         String?
  password      String?
  schoolProfileId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  schoolProfile SchoolProfile? @relation(fields: [schoolProfileId], references: [id])
  accounts      Account[]
  sessions      Session[]
  transactions  Transaction[] @relation("UserTransactions")
  auditLogs     AuditLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model SchoolProfile {
  id                String   @id @default(cuid())
  name              String
  address           String
  phone             String
  email             String   @unique
  logoUrl           String?
  signatureUrl      String?
  stampUrl          String?
  receiptFormat     String   @default("KW-{YYYY}{MM}-{000}")
  receiptCounter    Int      @default(1)
  receiptResetType  ResetType @default(MONTHLY)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  users        User[]
  transactions Transaction[]
  categories   Category[]
  auditLogs    AuditLog[]

  @@map("school_profiles")
}

model Category {
  id              String      @id @default(cuid())
  name            String
  type            CategoryType
  description     String?
  isActive        Boolean     @default(true)
  schoolProfileId String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  schoolProfile SchoolProfile @relation(fields: [schoolProfileId], references: [id], onDelete: Cascade)
  transactions  Transaction[]

  @@unique([name, type, schoolProfileId])
  @@map("categories")
}

// Model untuk Chart of Accounts (COA)
model CoaCategory {
  id          String       @id @default(cuid())
  code        String       // 1xxx, 2xxx, 3xxx, 4xxx, 5xxx
  name        String       // Aktiva, Kewajiban, Modal, Pendapatan, Beban
  description String?
  type        CoaType      // ASSET, LIABILITY, EQUITY, REVENUE, EXPENSE
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  subCategories CoaSubCategory[]
  
  @@unique([code])
  @@map("coa_categories")
}

model CoaSubCategory {
  id            String       @id @default(cuid())
  categoryId    String
  code          String       // 11xx, 12xx, dll
  name          String       // Aktiva Lancar, Aktiva Tetap
  description   String?
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  category    CoaCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  accounts    CoaAccount[]
  
  @@unique([code])
  @@map("coa_sub_categories")
}

model CoaAccount {
  id              String          @id @default(cuid())
  subCategoryId   String
  code            String          // 1110, 1120, dll
  name            String          // Kas di Bendahara, Rekening Bank Sekolah
  description     String?
  isActive        Boolean         @default(true)
  // Visibility control untuk Bendahara
  visibleToTreasurer Boolean      @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  subCategory     CoaSubCategory  @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)
  transactions    Transaction[]
  
  @@unique([code])
  @@map("coa_accounts")
}

// Model untuk konfigurasi form yang bisa diatur Super Admin
model FormConfiguration {
  id                    String   @id @default(cuid())
  formType              String   // "INCOME" atau "EXPENSE"
  allowedCoaCategories  String[] // Array of COA category IDs
  allowedCoaAccounts    String[] // Array of COA account IDs
  requiredFields        String[] // Field yang wajib diisi
  visibleFields         String[] // Field yang ditampilkan
  treasurerCanEdit      Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([formType])
  @@map("form_configurations")
}

model Transaction {
  id              String            @id @default(cuid())
  receiptNumber   String            @unique
  type            TransactionType
  date            DateTime
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  amount          Decimal           @db.Decimal(15, 2)
  categoryId      String
  // Tambahan untuk COA
  coaAccountId    String?
  description     String
  fromTo          String
  paymentMethod   PaymentMethod
  status          PaymentStatus
  receiptFileUrl  String?
  notes           String?
  createdById     String
  schoolProfileId String

  // Relations
  createdBy     User          @relation("UserTransactions", fields: [createdById], references: [id])
  schoolProfile SchoolProfile @relation(fields: [schoolProfileId], references: [id])
  category      Category      @relation(fields: [categoryId], references: [id])
  coaAccount    CoaAccount?   @relation(fields: [coaAccountId], references: [id])

  @@map("transactions")
}

model AuditLog {
  id              String      @id @default(cuid())
  action          AuditAction
  entityType      String
  entityId        String
  details         String?
  userId          String
  schoolProfileId String
  createdAt       DateTime    @default(now())

  // Relations
  user          User          @relation(fields: [userId], references: [id])
  schoolProfile SchoolProfile @relation(fields: [schoolProfileId], references: [id])

  @@map("audit_logs")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
  TREASURER
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  QRIS
}

enum PaymentStatus {
  PAID
  PENDING
  VOID
}

enum ResetType {
  MONTHLY
  YEARLY
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  VIEW
  LOGIN
  LOGOUT
  CREATE_TRANSACTION
  UPDATE_TRANSACTION
  DELETE_TRANSACTION
}

enum CoaType {
  ASSET         // Aktiva
  LIABILITY     // Kewajiban
  EQUITY        // Modal/Ekuitas
  REVENUE       // Pendapatan
  EXPENSE       // Beban
}
